{
  "name": "botmensagem",
  "version": "1.6.0",
  "description": "Insurance Helper",
  "main": "out/main/main.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build && electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps",
    "build:linux": "electron-vite build && electron-builder --linux",
    "build:dir": "electron-vite build && electron-builder --win --x64 --dir",
    "publish": "electron-vite build && electron-builder --win --x64 --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.caslulu.insurancehelper",
    "productName": "Insurance Helper",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "src/main/price/assets/**/*",
      "src/main/rta/assets/**/*",
      "node_modules/**/*",
      "package.json",
      ".env",
      "trello.env",
      "imagem_thiago.jpg",
      "imagem_debora.jpg"
    ],
    "asarUnpack": [
      "node_modules/@napi-rs/canvas/**",
      "node_modules/sql.js/**",
      "node_modules/pdf-lib/**",
      "node_modules/playwright/**",
      "src/main/price/assets/**",
      "src/main/rta/assets/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "asar": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "caslulu",
      "repo": "botmensagem",
      "releaseType": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caslulu/botmensagem.git"
  },
  "keywords": [],
  "author": "caslulu",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/caslulu/botmensagem/issues"
  },
  "homepage": "https://github.com/caslulu/botmensagem#readme",
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.19",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.51",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.56.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sql.js": "^1.13.0"
  }
}
